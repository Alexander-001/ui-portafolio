---
/* Components */
import SocialLink from "../components/SocialLink.astro";
/* Icons */
import AngularIcon from "../icons/Angular.astro";
import CSSIcon from "../icons/Css.astro";
import DirectionIcon from "../icons/Direction.astro";
import GithubIcon from "../icons/Github.astro";
import JavaIcon from "../icons/Java.astro";
import JavasScriptIcon from "../icons/JavaScript.astro";
import MongoIcon from "../icons/Mongo.astro";
import MysqlIcon from "../icons/Mysql.astro";
import NodeIcon from "../icons/Node.astro";
import ReactIcon from "../icons/React.astro";
import SpringIcon from "../icons/Spring.astro";
import TailwindIcon from "../icons/Tailwind.astro";
import TypeScriptIcon from "../icons/TypeScript.astro";

const tagsColor = {
  react: {
    name: "React",
    class: "bg-black text-white bg-gray-800 text-lg md:text-xl",
    icon: ReactIcon,
  },
  reactNative: {
    name: "React Native",
    class: "bg-blue-700 text-white text-lg md:text-xl",
    icon: ReactIcon,
  },
  css: {
    name: "CSS",
    class: "text-white bg-blue-900 text-lg md:text-xl",
    icon: CSSIcon,
  },
  javascript: {
    name: "JavaScript",
    class: "bg-black text-white bg-yellow-500/60 text-lg md:text-xl",
    icon: JavasScriptIcon,
  },
  typescript: {
    name: "TypeScript",
    class: "bg-blue-400/70 text-white text-lg md:text-xl",
    icon: TypeScriptIcon,
  },
  angular: {
    name: "Angular",
    class: "bg-red-400 text-white text-lg md:text-xl",
    icon: AngularIcon,
  },
  nodejs: {
    name: "NodeJS",
    class: "bg-green-400/70 text-white text-lg md:text-xl",
    icon: NodeIcon,
  },
  mongo: {
    name: "Mongo DB",
    class: "bg-green-800/70 text-white text-lg md:text-xl",
    icon: MongoIcon,
  },
  tailwind: {
    name: "Tailwind CSS",
    class: "bg-sky-400 text-white text-lg md:text-xl",
    icon: TailwindIcon,
  },
  springboot: {
    name: "SpringBoot",
    class: "bg-green-700/90 text-white text-lg md:text-xl",
    icon: SpringIcon,
  },
  java: {
    name: "Java",
    class: "bg-orange-600/40 text-white text-lg md:text-xl",
    icon: JavaIcon,
  },
  mysql: {
    name: "MySQL",
    class: "bg-sky-900 text-white text-lg md:text-xl",
    icon: MysqlIcon,
  },
};

const projects = [
  {
    title: "Totem Autoconsulta Enel",
    description:
      "Proyecto desarrollado para Enel para automatizar consultas de clientes. Lideré el desarrollo, coordinando con maquetadores CSS y diseñadores UX/UI, impartí inducciones a nuevos desarrolladores e implementé el aplicativo en un entorno real.",
    link: "",
    frontGithub: "",
    backGithub: "",
    image: "/autoconsulta.png",
    tags: [tagsColor.react, tagsColor.typescript, tagsColor.css],
  },
  {
    title: "Cafeteria",
    description:
      "Proyecto en desarrollo enfocado en cafeterías, destinado a implementar un sistema para registrar productos y tiendas, con el objetivo de mejorar la comodidad y eficiencia en la atención al cliente.",
    link: "#",
    frontGithub: "https://github.com/Alexander-001/ui-the-coffee",
    backGithub: "https://github.com/Alexander-001/ms-the-coffee",
    image: "/cafeProducts.png",
    tags: [
      tagsColor.react,
      tagsColor.reactNative,
      tagsColor.typescript,
      tagsColor.java,
      tagsColor.springboot,
      tagsColor.tailwind,
      tagsColor.mysql,
    ],
  },
  {
    title: "Tablero Basket",
    description:
      "Proyecto personal diseñado para ofrecer una solución a equipos de baloncesto, facilitando el cálculo y seguimiento de la puntuación global de sus partidos.",
    link: "https://alexander-001.github.io/ui-tablero-basket",
    frontGithub: "https://github.com/Alexander-001/ui-tablero-basket",
    backGithub: "https://github.com/Alexander-001/ms-tablero-basket",
    image: "/tablero.png",
    tags: [
      tagsColor.angular,
      tagsColor.css,
      tagsColor.typescript,
      tagsColor.nodejs,
      tagsColor.mongo,
    ],
  },
  {
    title: "PokeApi",
    description:
      "Proyecto personal para listar todos los Pokémon con sus estadísticas, creado con fines de aprendizaje y entretenimiento.",
    link: "https://capable-taiyaki-2f7948.netlify.app",
    frontGithub: "https://github.com/Alexander-001/pokeapifront",
    backGithub: "https://github.com/Alexander-001/pokeapiserver",
    image: "/pokemon.png",
    tags: [
      tagsColor.react,
      tagsColor.css,
      tagsColor.javascript,
      tagsColor.nodejs,
    ],
  },
];
---

{
  projects.map(
    ({ title, description, link, frontGithub, backGithub, image, tags }) => (
      <article class="mb-20">
        <h3 class="text-2xl md:text-4xl font-semibold text-yellow-100 mb-5">
          {title}
        </h3>
        <p class="text-white text-lg md:text-2xl mb-4 text-pretty">
          {description}
        </p>
        <ul class="flex gap-x-2 flex-row mb-2 flex-wrap">
          {tags.map((tag) => (
            <li class="mb-5">
              <span
                class={`${tag.class} flex gap-x-2 rounded-full text-sm py-1 px-2`}
              >
                <tag.icon class="size-4 md:size-8" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          class="rounded shadow-2xl shadow-white/10 mt-5"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        {link && frontGithub && backGithub && (
          <ul class="flex gap-x-2 mt-6 flex-wrap" id="list-link">
            <li>
              <SocialLink href={frontGithub}>
                <GithubIcon class="size-6 text-white" id="svg-github" />
                FrontEnd Github
              </SocialLink>
            </li>
            <li>
              <SocialLink href={backGithub}>
                <GithubIcon class="size-6 text-white" id="svg-github" />
                Backend Github
              </SocialLink>
            </li>
            {link !== "#" && (
              <li class="mt-5 md:mt-0">
                <SocialLink href={link}>
                  <DirectionIcon class="size-6 text-white" />
                  Ver proyecto
                </SocialLink>
              </li>
            )}
          </ul>
        )}
      </article>
    )
  )
}
