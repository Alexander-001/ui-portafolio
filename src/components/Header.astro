---
import ScriptScrolling from "../scripts/ScriptScrolling.astro";
import ThemeToggle from "./ThemeToggle.astro";
---

<header
  id="header"
  class="fixed top-0 left-0 z-10 flex justify-center items-center py-5 w-full xl:w-[1120px] mx-auto"
>
  <nav
    id="nav"
    class="ease-out flex flex-row flex-wrap gap-x-5 md:gap-x-10 justify-center items-center"
  >
    <a
      href="#top"
      class="transition hover:text-blue-500 dark:hover:text-blue-500 text-md pl-5"
      >Inicio</a
    >
    <a
      href="#experience"
      class="transition hover:text-blue-500 dark:hover:text-blue-500"
      >Experiencia</a
    >
    <a
      href="#projects"
      class="transition hover:text-blue-500 dark:hover:text-blue-500"
      >Proyectos</a
    >
    <a
      href="#knowledge"
      class="transition hover:text-blue-500 dark:hover:text-blue-500"
      >Conocimientos</a
    >
    <a
      href="#about"
      class="transition hover:text-blue-500 dark:hover:text-blue-500"
      >Sobre mi</a
    >
    <a
      href="#contact"
      class="transition hover:text-blue-500 dark:hover:text-blue-500 pr-5"
      >Contacto</a
    >
  </nav>
</header>

<ThemeToggle />
<ScriptScrolling />
