---
interface Props {
  title: string;
  project: string;
  description: string;
  date: string;
  link?: string;
  messageLink?: string;
}
const { title, project, description, link, messageLink, date } = Astro.props;
---

<div
  id="dot"
  class="absolute size-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time class="mb-1 text-md md:text-3xl font-normal leading-none text-sky-100/90"
  >{date}</time
>
<h3 class="text-lg md:text-3xl font-semibold text-yellow-100 mt-2">
  {title}
</h3>
<p class="mb-2 text-lg md:text-2xl font-normal text-yellow-100" id="project">
  {project}
</p>
<p
  class="mb-4 text-lg md:text-2xl font-normal text-gray-200 text-pretty"
  id="description"
>
  {description}
</p>
{
  link && (
    <a
      href={link}
      target="_blank"
      class="text-sm md:text-lg inline-flex items-center px-4 py-2  font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
    >
      {messageLink ? messageLink : "Saber m√°s.."}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
