<style>
  .typewriter {
    overflow: hidden;
    border-right: 0.15em solid rgb(240, 255, 167);
    white-space: nowrap;
    animation:
      typing 5s steps(40, end) infinite,
      blink-caret 0.75s step-end infinite;
  }

  @keyframes typing {
    0% {
      width: 0;
    }
    50% {
      width: 70%;
    }
    100% {
      width: 0;
    }
  }

  @keyframes blink-caret {
    from,
    to {
      border-color: transparent;
    }
    50% {
      border-color: rgb(240, 255, 167);
    }
  }
</style>
