<script>
  window.addEventListener("scroll", () => {
    const nav = document.querySelector("#nav");
    const theme = localStorage.getItem("theme");
    if (nav) {
      if (window.scrollY > 0) {
        nav.classList.add(
          "border",
          "border-gray-400",
          `${theme === "dark" ? "text-white" : "text-blue-700"}`,
          "p-2",
          "rounded-3xl",
          `${theme === "dark" ? "bg-gray-400" : "bg-gray-100"}`
        );
      } else {
        nav.classList.remove(
          "border",
          `${theme === "dark" ? "text-white" : "text-blue-700"}`,
          "border-gray-400",
          "p-2",
          "rounded-3xl",
          `${theme === "dark" ? "bg-gray-400" : "bg-gray-100"}`
        );
      }
    }
  });
</script>
