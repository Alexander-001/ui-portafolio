<script>
  window.addEventListener("scroll", () => {
    const nav = document.querySelector("#nav");
    const theme = localStorage.getItem("theme");
    if (nav) {
      console.log(window.scrollY);
      if (window.scrollY > 0) {
        nav.classList.add(
          "border",
          "border-gray-400",
          "p-2",
          "rounded-3xl",
          `${theme === "dark" ? "bg-gray-300" : "bg-gray-100"}`,
          `${theme !== "dark" ? "bg-gray-300" : "bg-gray-100"}`
        );
      } else {
        nav.classList.remove(
          "border",
          "border-gray-400",
          "p-2",
          "rounded-3xl",
          `${theme === "dark" ? "bg-gray-300" : "bg-gray-100"}`,
          `${theme !== "dark" ? "bg-gray-300" : "bg-gray-100"}`
        );
      }
    }
  });
</script>
