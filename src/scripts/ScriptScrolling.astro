<script>
  window.addEventListener("scroll", () => {
    const nav = document.querySelector("#nav");
    if (nav) {
      if (window.scrollY > 0) {
        nav.classList.add(
          "border",
          "border-gray-900",
          "p-2",
          "rounded-3xl",
          "bg-gray-800"
        );
      } else {
        nav.classList.remove(
          "border",
          "border-gray-900",
          "p-2",
          "rounded-3xl",
          "bg-gray-800"
        );
      }
    }
  });
</script>
